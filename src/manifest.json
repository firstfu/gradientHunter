{
    "manifest_version": 3,
    "name": "Gradient Hunter",
    "version": "1.0.0",
    "description": "A Chrome extension for capturing and generating CSS gradients",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/index.js"
            ]
        }
    ]
}